@model Encuestadora_Identity2.Models.Pregunta

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Pregunta para @ViewBag.encuesta.tituloEncuesta</h4>
<hr />
<p>
    <button title="Mis Preguntas" type="button" onclick="window.open('/Pregunta?EncuestaId=@ViewBag.EncuestaId', '_self');" class="btn btn-light"><img src="/img/icono_atras.svg" class="img-fluid" alt="Atras" /></button>
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tituloPregunta" class="control-label"></label>
                <input asp-for="tituloPregunta" class="form-control" />
                <span asp-validation-for="tituloPregunta" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Encuesta" class="control-label"></label>
                    <b>@ViewBag.encuesta.tituloEncuesta</b>*@
                <input type="hidden" asp-for="Encuesta" class="form-control" value="@ViewBag.encuesta" />
                <span asp-validation-for="Encuesta" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="EncuestaId" class="control-label"></label>*@
                <input type="hidden" asp-for="EncuestaId" class="form-control" value="@ViewBag.encuesta.EncuestaId" />
                <span asp-validation-for="EncuestaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Pregunta" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
