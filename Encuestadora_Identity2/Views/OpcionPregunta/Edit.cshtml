@model Encuestadora_Identity2.Models.OpcionPregunta

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@Html.DisplayFor(model => model.tituloOpcion)</h4>
<hr />
<p>
    <button title="Mis Opciones" type="button" onclick="window.open('/OpcionPregunta?PreguntaId=@Model.PreguntaId', '_self');" class="btn btn-light"><img src="/img/icono_atras.svg" class="img-fluid" alt="Atras" /></button>
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OpcionPreguntaId" class="form-control" />
            <div class="form-group">
                <label asp-for="tituloOpcion" class="control-label"></label>
                <input asp-for="tituloOpcion" class="form-control" />
                <span asp-validation-for="tituloOpcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Encuesta" class="control-label"></label>
                    <b>@ViewBag.encuesta.tituloEncuesta</b>*@
                <input type="hidden" asp-for="Pregunta" class="form-control" />
                <span asp-validation-for="Pregunta" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="EncuestaId" class="control-label"></label>*@
                <input type="hidden" asp-for="PreguntaId" class="form-control" />
                <span asp-validation-for="PreguntaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
